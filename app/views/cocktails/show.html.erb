<div class="container">
  <h3>trago de <%= @cocktail.name %></h3>

  <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
  <h2>description</h2>
  <% @cocktail.doses.each do |dose|  %>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to "delete Dose",
                    dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
  <% end %>  
  <div>
    <%= link_to "Back to all cocktails", cocktails_path %>
  </div>

</div>

